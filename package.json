{
  "name": "parcel-website",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "rm -rf _site dist; eleventy; parcel build _site/index.html '_site/*/*/*.html'",
    "watch": "eleventy --watch",
    "serve": "parcel _site/index.html '_site/*/*/*.html'",
    "start": "run-p watch serve",
    "debug": "DEBUG=* eleventy",
    "lint": "prettier --write 'generate-api-docs/*.js' 'src/**/*.{js,json,md,scss}'",
    "generate-api-docs": "node generate-api-docs/ ../ ./api",
    "generate-api-docs:watch": "nodemon -w ../parcel -w generate-api-docs -x yarn generate-api-docs"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@babel/generator": "^7.12.11",
    "@babel/parser": "^7.12.11",
    "@babel/traverse": "^7.12.12",
    "@parcel/transformer-sass": "nightly",
    "autoprefixer": "^10.3.4",
    "eleventy-plugin-toc": "^1.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^8.0.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "parcel": "nightly",
    "postcss": "^8.3.6",
    "postcss-focus-visible": "^5.0.0",
    "prettier": "2.2.1",
    "sass": "^1.35.2",
    "tailwindcss": "^2.2.15"
  },
  "dependencies": {
    "marked": "^2.0.7",
    "nullthrows": "^1.1.1"
  },
  "resolutions": {
    "gulp-sass": "5.0.0"
  },
  "lint-staged": {
    "*.{md,scss,js,json}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "alias": {
    "./_site/**": "./_site/$1",
    "./**": "./_site/$1"
  }
}
