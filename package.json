{
  "name": "parcel-website",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "last 2 Safari versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "scripts": {
    "build": "rm -rf _site dist; eleventy; parcel build src/home/index.html '_site/*.html' _site/*/index.html '_site/*/*/*.html' --public-url $(node public-url.js)",
    "watch": "eleventy --watch",
    "serve": "parcel src/home/index.html '_site/*.html' _site/*/index.html '_site/*/*/*.html'",
    "start": "run-p watch serve",
    "debug": "DEBUG=* eleventy",
    "lint": "prettier --write 'generate-api-docs/*.js' 'src/**/*.{js,json,md,scss}'",
    "generate-api-docs": "node generate-api-docs/ ../ ./api",
    "generate-api-docs:watch": "nodemon -w ../parcel -w generate-api-docs -x yarn generate-api-docs"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "@babel/generator": "^7.12.11",
    "@babel/parser": "^7.12.11",
    "@babel/traverse": "^7.12.12",
    "@parcel/optimizer-css": "^2.2.0",
    "@parcel/packager-xml": "^2.2.0",
    "@parcel/transformer-css-experimental": "^2.2.0",
    "@parcel/transformer-sass": "^2.2.0",
    "@parcel/transformer-xml": "^2.2.0",
    "eleventy-plugin-toc": "^1.1.0",
    "flow-bin": "^0.177.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^8.0.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "nullthrows": "^1.1.1",
    "parcel": "^2.2.0",
    "postcss": "^8.3.6",
    "posthtml-include": "^1.7.0",
    "posthtml-prism": "^1.0.4",
    "posthtml-render": "^3.0.0",
    "prettier": "2.2.1",
    "sass": "^1.35.2",
    "sharp": "^0.29.1",
    "tailwindcss": "^2.2.15",
    "tailwindcss-safe-area": "^0.2.1"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.4.2",
    "alpinejs": "^3.4.2",
    "focus-visible": "^5.2.0",
    "marked": "^2.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-use": "^17.3.1"
  },
  "resolutions": {
    "gulp-sass": "5.0.0"
  },
  "lint-staged": {
    "*.{md,scss,js,json}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "alias": {
    "./assets/**": "./src/assets/$1",
    "./plugin-browser/**": "./src/plugin-browser/$1"
  },
  "@parcel/transformer-css": {
    "pseudoClasses": {
      "focusVisible": "focus-visible"
    }
  }
}
