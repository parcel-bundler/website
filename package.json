{
  "name": "parcel-website",
  "version": "1.0.0",
  "description": "The parcel website",
  "main": "index.js",
  "repository": "git://git@github.com:parcel-bundler/website.git",
  "author": "Devon Govett <devongovett@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "./build.sh",
    "dev": "if [ -d \"dist\" ]; then cd dist; serve; else ./build.sh; cd dist; serve; fi;",
    "clean": "rm -rf dist",
    "format": "prettier --write 'src/**/*.{md,js,css,json}'",
    "deploy": "now"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "now-client": "5.2.0"
  },
  "devDependencies": {
    "husky": "^1.1.2",
    "markdown-styles": "^3.1.10",
    "now": "^11.2.4",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.8.0",
    "serve": "^11.2.0"
  }
}
